<Window x:Class="VehicleDetectionProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Background="#222831"
        xmlns:local="clr-namespace:VehicleDetectionProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#393e46" HorizontalAlignment="Left" Height="165" Margin="34,489,0,0" Stroke="Black" VerticalAlignment="Top" Width="284"/>
        <Label Content="Status" HorizontalAlignment="Left" Foreground="#00adb5" HorizontalContentAlignment="Center" FontSize="25" Margin="34,442,0,0" VerticalAlignment="Top" Height="47" Width="284"/>
        <Label Content="Stream" Foreground="#00fff5" HorizontalAlignment="Left" FontSize="24" Margin="90,550,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Tracking" Foreground="#00fff5" HorizontalAlignment="Left" FontSize="24" Margin="90,598,0,0" VerticalAlignment="Top" Width="132" Height="47"/>
        <Label Content="Connection" Foreground="#00fff5" HorizontalAlignment="Left" FontSize="24" Margin="90,501,0,0" VerticalAlignment="Top"/>
        <Rectangle Fill="#393e46" HorizontalAlignment="Left" Height="418" Margin="34,20,0,0" Stroke="Black" VerticalAlignment="Top" Width="729"/>
        <MediaElement HorizontalAlignment="Left" Height="418" Margin="34,20,0,0" VerticalAlignment="Top" Width="729"/>
        <Image HorizontalAlignment="Left" Height="30" Margin="49,508,0,0" VerticalAlignment="Top" Width="30" Source="Assets/connectionIcon.png"/>
        <Image HorizontalAlignment="Left" Height="30" Margin="49,608,0,0" VerticalAlignment="Top" Width="30" Source="Assets/targetIcon.png"/>
        <Image HorizontalAlignment="Left" Height="30" Margin="49,557,0,0" VerticalAlignment="Top" Width="30" Source="Assets/streamIcon.png"/>
        <Image x:Name="connectionStatus" HorizontalAlignment="Left" Height="30" Margin="262,508,0,0" VerticalAlignment="Top" Width="30" Source="Assets/redCircleIcon.png"/>
        <Image x:Name="streamStatus" HorizontalAlignment="Left" Height="30" Margin="262,557,0,0" VerticalAlignment="Top" Width="30" Source="Assets/redCircleIcon.png"/>
        <Image x:Name="trackingStatus" HorizontalAlignment="Left" Height="30" Margin="262,608,0,0" VerticalAlignment="Top" Width="30" Source="Assets/redCircleIcon.png"/>


    </Grid>
</Window>
